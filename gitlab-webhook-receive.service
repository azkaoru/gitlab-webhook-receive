[Unit]
Description=GitLab Webhook Receiver
Documentation=https://github.com/azkaoru/gitlab-webhook-receive
After=network.target

[Service]
Type=simple
User=webhook
Group=webhook
WorkingDirectory=/opt/webhook
ExecStart=/usr/bin/python3 /opt/webhook/webhook_receiver.py
EnvironmentFile=-/etc/webhook/config
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=gitlab-webhook-receive

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/tmp
ProtectHome=true

[Install]
WantedBy=multi-user.target
